<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.hsworms.fritz.ema.taschenrechner.Taschenrechner_Activity">

    <LinearLayout
        android:id="@+id/lin_lay_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lin_lay_row2"
        android:layout_alignStart="@+id/lin_lay_row2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/but_zero"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zero_pressed"
            android:text="0" />

        <Button
            android:id="@+id/but_period"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="period_pressed"
            android:text="." />

        <Button
            android:id="@+id/but_equals"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="equals_pressed"
            android:text="=" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lay_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin_lay_row1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/but_one"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="one_pressed"
            android:text="1" />

        <Button
            android:id="@+id/but_two"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="two_pressed"
            android:text="2" />

        <Button
            android:id="@+id/but_three"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="three_pressed"
            android:text="3" />

        <Button
            android:id="@+id/but_plus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="plus_pressed"
            android:text="+" />

        <Button
            android:id="@+id/but_minus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="minus_pressed"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lay_row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin_lay_row2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/but_four"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="four_pressed"
            android:text="4" />

        <Button
            android:id="@+id/but_five"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="five_pressed"
            android:text="5" />

        <Button
            android:id="@+id/but_six"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="six_pressed"
            android:text="6" />

        <Button
            android:id="@+id/but_times"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="times_pressed"
            android:text="*" />

        <Button
            android:id="@+id/but_div"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="div_pressed"
            android:text="/" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lay_row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin_lay_row3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/lin_lay_row3"
        android:layout_alignStart="@+id/lin_lay_row3"
        >

        <Button
            android:id="@+id/but_seven"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="seven_pressed"
            android:text="7" />

        <Button
            android:id="@+id/but_eight"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="eight_pressed"
            android:text="8" />

        <Button
            android:id="@+id/but_nine"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nine_pressed"
            android:text="9" />

        <Button
            android:id="@+id/but_ac"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="ac_pressed"
            android:text="AC" />




    </LinearLayout>

    <TextView
        android:id="@+id/res_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#00ff00"
        android:background="#000000"
        android:text="" />


</RelativeLayout>
